<% layout('main/layout') %>

<div class="jumbotron">
  <div class="container">
    <h1 class="text-center">Hey <%=user.profile.name%>, here are your best deals!!!</h1>
    <p align='center'>Choose your product wisely</p>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="input-group col-md-12">
          <input type="text" class="form-control input-lg" name="search_term" placeholder="Search here...." />
          <span class="input-group-btn">
          <button type="submit" class="btn btn-primary btn-lg"><i class="glyphicon glyphicon-search"></i></button>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <%for(var i=0;i<products.length;i++) {%>
    <div class="col-md-4">
      <a href="/product/<%=products[i].id%>">
      <div class="thumbnail">
        <img src="<%=products[i].image%>">
        <div class="caption">
          <h4><%= products[i].name %></h4>
          <p><%= products[i].category.name%></p>
          <p>&#8377;<%=products[i].price%></p>
        </div>
      </div>
    </a>
    </div>
    <%}%>
    <ul class="pagination text-center">
      <li>
      <%for(var i=1;i<=pages;i++) {%>
      <%if(i===1){%>
        <li><a href='/'><%=i%></a></li>
      <%}else{%>
        <li><a href='/page/<%=i%>'><%=i%></a></li>
      <%}%>
      <%}%>
      </li>
    </ul>
  </div>
</div>
